{
  "name": "be-hapi",
  "version": "1.0.0",
  "description": "Decorated class-based controllers for Hapi with IoC support (like InversifyJS).",
  "author": "Maciej Kaczmarek <maciej@kaczmarek.io>",
  "license": "MIT",
  "keywords": [
    "node",
    "hapi",
    "decorators",
    "inversify",
    "ioc",
    "controllers"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mckacz/be-hapi.git"
  },
  "bugs": {
    "url": "https://github.com/mckacz/be-hapi/issues"
  },
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "types": "dts/index.d.ts",
  "scripts": {
    "lint": "tslint --project .",
    "lint:ci": "mkdir -p test-results/tslint && tslint --project . -o test-results/tslint/results.xml -t junit",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "clean": "rimraf lib es dts coverage test-results",
    "build": "yarn clean && yarn build:cjs && yarn build:es && yarn build:dts",
    "build:cjs": "tsc",
    "build:es": "tsc --build tsconfig.es6.json",
    "build:dts": "tsc --build tsconfig.dts.json"
  },
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/iron": "^6.0.0",
    "@types/hapi__catbox": "^10.2.2",
    "@types/hapi__hapi": "^19.0.3",
    "@types/hapi__joi": "^16.0.12",
    "@types/hapi__mimos": "^4.1.1",
    "@types/hapi__podium": "^3.4.0",
    "@types/hapi__shot": "^4.1.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "@types/ramda": "^0.27.4",
    "jest": "^25.4.0",
    "jest-diff": "^25.4.0",
    "jest-junit": "^10.0.0",
    "pretty-format": "^25.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "ts-toolbelt": "^6.5.1",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/*.d.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/(.*))\\.test.(tsx?)$",
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./tests/bootstrap.ts",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./test-results/jest"
  }
}
