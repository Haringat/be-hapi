{
  "name": "@mckacz/be-hapi",
  "version": "0.0.1",
  "description": "Class-based controllers with Inversify support for Hapi.",
  "author": "Maciej Kaczmarek <maciej@kaczmarek.io>",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project .",
    "test": "jest",
    "build": "tsc"
  },
  "dependencies": {
    "hapi": "^17.8.1",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/hapi": "^17.8.0",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "@types/ramda": "^0.25.44",
    "jest": "^23.6.0",
    "reflect-metadata": "^0.1.12",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/*.d.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/(.*))\\.test.(tsx?)$",
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./tests/bootstrap.ts",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
